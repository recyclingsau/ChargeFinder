<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dhbw.de.chargefinder.SingleItemActivity">

    <TextView android:id="@+id/textView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/btn_Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/start_navigation"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_share"
        android:id="@+id/btn_share"
        android:layout_alignTop="@+id/btn_Navigation"
        android:layout_toEndOf="@+id/btn_Navigation" />

</RelativeLayout>
